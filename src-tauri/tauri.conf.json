{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "marknote",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "os": {
        "all": true
      },
      "clipboard": {
        "all": false,
        "readText": true,
        "writeText": true
      },
      "process": {
        "all": false,
        "exit": true,
        "relaunch": false,
        "relaunchDangerousAllowSymlinkMacos": false
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true,
        "create": false,
        "setDecorations": false,
        "setTitle": true,
        "setAlwaysOnTop": true
      },
      "dialog": {
        "all": true
      },
      "path": {
        "all": true
      },
      "protocol": {
        "all": true,
        "asset": true,
        "assetScope": ["**"]
      },
      "notification": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.github.marknote",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "marknote",
        "width": 600,
        "height": 600,
        "minWidth": 500,
        "minHeight": 400,
        "decorations": true,
        "center": true,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "visible": false
      }
    ],
    "updater": {
      "active": false,
      "dialog": true,
      "pubkey": "",
      "endpoints": ["https://cedar12.github.io/marknote/install.json"],
      "windows": {
        "installMode": "passive",
        "installerArgs": []
      }
    }
  }
}
