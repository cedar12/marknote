{
  "build": {
    "beforeBuildCommand": "yarn build",
    "beforeDevCommand": "yarn dev",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "MarkNote",
    "version": "../package.json"
  },
  "plugins": {
    "shell": {
      "open": true,
      "scope": [
        {
          "args": true,
          "cmd": "ftype",
          "name": "Windows-ftype",
          "sidecar": false
        }
      ]
    },
    "updater": {
      "endpoints": [
        "https://ghproxy.com/https://github.com/cedar12/marknote/releases/download/updater/update.json",
        "https://github.com/cedar12/marknote/releases/download/updater/update.json"
      ],
      "windows": {
        "installerArgs": []
      }
    }
  },
  "tauri": {
    "bundle": {
      "active": true,
      "fileAssociations": [{
        "ext": ["md","markdown"],
        "name": "Markdown document",
        "role": "Editor"
      }],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.github.marknote",
      "targets": "all",
      "updater": {
        "active": true,
        "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDM2MUE1NDQyQTJDNkFBREIKUldUYnFzYWlRbFFhTmtJU3NoL1o3UVp4ZERqbEV0SXNQaFVBUDZSUVR4Y1Y0ejJLRFdqMkZLQnUK",
        "windows": {
          "installMode": "passive"
        }
      },
      "windows": {
        "nsis": {
          "displayLanguageSelector": true,
          "languages": [
            "SimpChinese",
            "English"
          ]
        }
      }
    },
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      },
      "csp": null
    },
    "windows": [
      {
        "center": true,
        "decorations": true,
        "fullscreen": false,
        "height": 800,
        "hiddenTitle": true,
        "minHeight": 400,
        "minWidth": 500,
        "resizable": true,
        "title": "marknote",
        "titleBarStyle": "Overlay",
        "visible": false,
        "width": 800
      }
    ]
  }
}